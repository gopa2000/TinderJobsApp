<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_profile_tab"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="com.example.gopa2000.mobapps.ProfileTabFragment">

        <ImageView
            android:id="@+id/profile_tab_img"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/lampard"
            android:scaleType="centerCrop"
            android:layout_width="175dp"
            android:layout_height="205dp" />

        <TextView
            android:text="Puru Bhagat"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/profile_tab_img"
            android:layout_centerHorizontal="true"
            android:id="@+id/profile_tab_name"
            android:textSize="20dp"/>

        <View
            android:id="@+id/greyline1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/profile_tab_name"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#00909a"/>

        <TextView
            android:id="@+id/matches_label"
            android:text="Matches"
            android:textColor="#00909a"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_below="@+id/greyline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/viewmatcheslayout"
            android:layout_below="@+id/matches_label"
            android:background="@drawable/profiletab">

            <ImageView
                android:id="@+id/seekermatchesicon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/viewmatches40"
                android:background="@drawable/profiletab"/>

            <TextView
                android:id="@+id/seekermatches"
                android:text="   View Matches"
                android:textColor="#000000"
                android:layout_height="50dp"
                android:gravity="center_vertical|left"
                android:background="@drawable/profiletab"
                android:textSize="18dp"
                android:layout_toRightOf="@id/seekermatchesicon"
                android:layout_width="fill_parent" />

        </RelativeLayout>

        <View
            android:id="@+id/greyline2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/viewmatcheslayout"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#00909a"/>

        <TextView
            android:id="@+id/profile_label"
            android:text="Profile"
            android:textColor="#00909a"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_below="@+id/greyline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/viewprofilelayout"
            android:layout_below="@+id/profile_label"
            android:background="@drawable/profiletab">

            <ImageView
                android:id="@+id/viewprofileicon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/viewprofile"
                android:background="@drawable/profiletab"/>

            <TextView
                android:id="@+id/seekerviewprofile"
                android:text="   View Profile"
                android:textColor="#000000"
                android:layout_height="50dp"
                android:gravity="center_vertical|left"
                android:layout_toRightOf="@+id/viewprofileicon"
                android:textSize="18dp"
                android:background="@drawable/profiletab"
                android:layout_width="fill_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editprofilelayout"
            android:layout_below="@+id/viewprofilelayout"
            android:background="@drawable/profiletab">

            <ImageView
                android:id="@+id/editprofileicon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/editprofile"
                android:background="@drawable/profiletab"/>

            <TextView
                android:id="@+id/seekereditprofile"
                android:text="   Edit Profile"
                android:textColor="#000000"
                android:layout_height="50dp"
                android:gravity="center_vertical|left"
                android:layout_toRightOf="@+id/editprofileicon"
                android:background="@drawable/profiletab"
                android:textSize="18dp"
                android:layout_width="fill_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logoutlayout"
            android:layout_below="@+id/editprofilelayout"
            android:background="@drawable/profiletab">

            <ImageView
                android:id="@+id/logouticon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/logout"
                android:background="@drawable/profiletab"/>

            <TextView
                android:id="@+id/logout"
                android:text="   Logout"
                android:background="@drawable/profiletab"
                android:textColor="#000000"
                android:layout_height="50dp"
                android:gravity="center_vertical|left"
                android:layout_toRightOf="@id/logouticon"
                android:textSize="18dp"
                android:layout_width="fill_parent" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
